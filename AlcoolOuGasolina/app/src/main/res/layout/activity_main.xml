<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:text="1.90"
            android:ems="10"
            android:id="@+id/editValorAlcool"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintBottom_toTopOf="@+id/textValorGasolina"
            android:layout_marginBottom="20dp"/>

    <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:text="2.60"
            android:ems="10"
            android:id="@+id/editValorGasolina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonCalcular"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginBottom="16dp"
            android:inputType="numberDecimal"/>

    <Button
            android:text="Calcular"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:id="@+id/buttonCalcular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#DADADA"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/textResultado"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textResultado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"
            app:layout_constraintHorizontal_bias="0.498"/>

    <TextView
            android:text="Preço da gasolina ex: 2.60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textValorGasolina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintBottom_toTopOf="@+id/editValorGasolina"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="Preço do álcool ex: 1.90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textValorAlcool"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editValorAlcool"
            app:layout_constraintHorizontal_bias="0.196"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="Saiba a melhor opção de abastecimento do seu carro!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textValorAlcool"
            app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginBottom="28dp"/>

    <ImageView
            android:layout_width="43dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textTitulo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:text="Álcool ou Gasolina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitulo"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textInfo"
            android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>